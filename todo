// ON START
pulse_anim()
stand_anim()
cloud_anim() // ?
play_music()
give_suggestion() // start moving


// WHEN KEY PRESSED
WHILE WALKING {
  walk_anim()
  road_anim()
  play_footsteps()
  decr_yellow()

  if see bone {
    give_suggestion() // eat the bone
  }

}

// WHEN KEY NOT PRESSED
WHILE STATIONARY {
  incr_yellow() 
  
  if bone && not_walking {
    block_walk_key()
    grab_bone_anim()
    count_point()
    unblock(walk_key)
    give_suggestion() // keep moving
  }

}
